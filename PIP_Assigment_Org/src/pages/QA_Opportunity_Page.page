<!-- 											    </apex:selectRadio> -->
      
		                         			</apex:outPutPanel>
		                         			
		                         			<apex:outPutPanel rendered="{!If(OR(values.strType =='picklist',values.strType == 'Picklist'),true,false)}">
		                         				
		                         				<apex:selectList id="choseValue" value="{!strValueSelcted}" size="1">
													<apex:selectOption itemValue="" itemLabel=""/>
												</apex:selectList>

<!-- 		                         				<apex:inputText value="{!values.objAnswer.Answer_Given__c}" styleClass="{!values.objQuestion.Question_Type__c}" rendered="{!If(values.objAnswer.Answer_Given__c == null, true, false)}"/> -->
		                         			</apex:outPutPanel>
		                         			
		                         			
		                         			<apex:outputText value="{!values.objAnswer.Answer_Given__c}" id="answerId_Blank" rendered="{!If(values.objAnswer.Answer_Given__c != null, true, false)}"/>
		                         			
		                         		</p>
   									</p>
   								</li>
   							</apex:repeat>
   						</apex:repeat>
   					 
   					
